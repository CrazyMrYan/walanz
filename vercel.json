{
  "version": 2,
  "buildCommand": "pnpm run build",
  "outputDirectory": "dist",
  "rewrites": [
    { "source": "/(.*)", "destination": "/api" }
  ],
  "headers": [
    {
      "source": "/api/(.*)",
      "headers": [
        { "key": "Cache-Control", "value": "no-store, max-age=0" },
        { "key": "Access-Control-Allow-Origin", "value": "*" }
      ]
    }
  ],
  "routes": [
    { "src": "/api/swagger-ui-bundle\\.js", "dest": "https://cdn.jsdelivr.net/npm/swagger-ui-dist/swagger-ui-bundle.js" },
    { "src": "/api/swagger-ui-standalone-preset\\.js", "dest": "https://cdn.jsdelivr.net/npm/swagger-ui-dist/swagger-ui-standalone-preset.js" },
    { "src": "/api/swagger-ui\\.css", "dest": "https://cdn.jsdelivr.net/npm/swagger-ui-dist/swagger-ui.css" },
    { "src": "/(.*)", "dest": "/api" }
  ]
}